{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/jspm_packages": true,
        "**/node_modules": true,
        "**/.zip": true,
        "**/.sh": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true
    },
    "editor.fontSize": 16,
    "editor.renderWhitespace": "all",
    "path-intellisense.mappings": {
        "@": "${workspaceRoot}/src/operate-tool/src"
    },
    "editor.tabSize": 2,
    // 激活 node inspect debugger
    "debug.node.autoAttach": "on",
}
